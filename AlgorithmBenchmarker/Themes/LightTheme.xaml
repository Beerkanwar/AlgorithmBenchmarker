<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">
    <!-- Colors -->
    <Color x:Key="BackgroundColor">#F3F3F3</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#2D2D30</Color>
    <Color x:Key="AccentColor">#007ACC</Color>
    <Color x:Key="BorderColor">#CCCCCC</Color>
    <Color x:Key="ControlBackgroundColor">#FFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>

    <!-- Control content foreground: contrasts with control backgrounds in this theme -->
    <SolidColorBrush x:Key="ControlContentForeground" Color="{StaticResource TextColor}"/>

    <!-- Theme-specific layout / appearance constants -->
    <CornerRadius x:Key="ControlCornerRadius">3</CornerRadius>
    <Thickness x:Key="DefaultBorderThickness">1</Thickness>
    <Thickness x:Key="InputPadding">8</Thickness>
    <System:Double x:Key="ToggleButtonWidth">28</System:Double>
</ResourceDictionary>
