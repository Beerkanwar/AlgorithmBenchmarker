<UserControl x:Class="AlgorithmBenchmarker.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:viewmodels="clr-namespace:AlgorithmBenchmarker.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:ResultsViewModel}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/> <!-- Dynamic resize -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/> <!-- Expander -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Select Algorithms:" VerticalAlignment="Top" Margin="0,8,10,0" FontWeight="SemiBold"/>
            
            <!-- ListBox with CheckBox items for multi-selection -->
            <Border BorderThickness="1" BorderBrush="#CCCCCC" CornerRadius="4" Padding="5" MaxHeight="150" MinWidth="250">
                <ListBox ItemsSource="{Binding BatchItems}" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding AlgorithmName}" 
                                      IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                      Margin="5,3"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0" VerticalAlignment="Top">
                <Button Content="Refresh DB" Command="{Binding LoadResultsCommand}" Margin="0,0,10,5" Padding="15,8"/>
                <Button Content="Reset Data" Command="{Binding ClearResultsCommand}" Margin="0,0,10,5" Padding="15,8" Background="#DC3545" Foreground="White" FontWeight="Bold"/>
                <Button Content="Export CSV" Command="{Binding ExportCsvCommand}" Margin="0,0,10,5" Padding="15,8"/>
                <Button Content="Export JSON" Command="{Binding ExportJsonCommand}" Margin="0,0,10,5" Padding="15,8"/>
            </StackPanel>
        </StackPanel>

        <!-- Time Chart -->
        <GroupBox Header="Execution Time (Ms vs Input Size)" Grid.Row="1" Margin="0,0,0,10">
            <lvc:CartesianChart Series="{Binding TimeSeries}" 
                                XAxes="{Binding XAxes}" 
                                YAxes="{Binding YAxesTime}"
                                ZoomMode="Both"
                                LegendPosition="Right"
                                LegendTextPaint="{Binding LegendTextPaint}"
                                TooltipPosition="Center"
                                Background="Transparent"/>
        </GroupBox>

        <!-- Memory Chart -->
        <GroupBox Header="Memory (Allocated Bytes vs Input Size)" Grid.Row="2" Margin="0,0,0,10">
            <lvc:CartesianChart Series="{Binding MemorySeries}" 
                                XAxes="{Binding XAxes}" 
                                YAxes="{Binding YAxesMem}"
                                ZoomMode="Both"
                                LegendPosition="Right"
                                LegendTextPaint="{Binding LegendTextPaint}"
                                TooltipPosition="Center"
                                Background="Transparent"/>
        </GroupBox>

        <!-- Data Grid (Expandable) -->
        <Expander Grid.Row="3" Header="Detailed Results Table" 
                  Foreground="{DynamicResource TextBrush}"
                  HorizontalAlignment="Stretch" 
                  Margin="0,5">
            <DataGrid ItemsSource="{Binding FilteredResults}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Height="200"
                      Margin="0,5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Batch" Binding="{Binding BatchId}"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Timestamp}" Width="140"/>
                    <DataGridTextColumn Header="Algorithm" Binding="{Binding AlgorithmName}"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding InputSize}"/>
                    <DataGridTextColumn Header="Avg Time (ms)" Binding="{Binding AvgTimeMs, StringFormat=N4}" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Min (ms)" Binding="{Binding MinTimeMs, StringFormat=N4}"/>
                    <DataGridTextColumn Header="Max (ms)" Binding="{Binding MaxTimeMs, StringFormat=N4}"/>
                    <DataGridTextColumn Header="StdDev" Binding="{Binding StdDevTimeMs, StringFormat=N4}"/>
                    <DataGridTextColumn Header="Allocated (Bytes)" Binding="{Binding AllocatedBytes, StringFormat=N0}" FontWeight="Bold"/>
                </DataGrid.Columns>
            </DataGrid>
        </Expander>
    </Grid>
</UserControl>
