<UserControl x:Class="AlgorithmBenchmarker.Views.BenchmarkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:AlgorithmBenchmarker.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}">
    <Grid Margin="20">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left">
            <TextBlock Text="Benchmark Configuration" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Algorithm Selection -->
            <GroupBox Header="Algorithm Selection" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Category" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedItem="{Binding SelectedCategory}" 
                              IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanInverseConverter}}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Algorithm" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Algorithms}" 
                              SelectedItem="{Binding SelectedAlgorithm}" 
                              DisplayMemberPath="Name"
                              IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanInverseConverter}}"/>
                </StackPanel>
            </GroupBox>

            <!-- Configuration -->
            <GroupBox Header="Settings" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Input Size Range" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Min Size"/>
                            <TextBox Text="{Binding Config.MinInputSize}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                            <TextBlock Text="Max Size"/>
                            <TextBox Text="{Binding Config.MaxInputSize}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="5,0,0,0">
                            <TextBlock Text="Step Size"/>
                            <TextBox Text="{Binding Config.StepSize}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Input Data Type" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding InputTypes}" 
                              SelectedItem="{Binding Config.InputType}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Input Distribution" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding DistributionTypes}" 
                              SelectedItem="{Binding Config.Distribution}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Repetitions (Average)" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Config.Repetitions}"/>
                </StackPanel>
            </GroupBox>

            <Button Content="RUN BENCHMARK" 
                    Command="{Binding RunBenchmarkCommand}" 
                    Padding="20,10" 
                    FontSize="14"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanInverseConverter}}"/>

            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{StaticResource AccentBrush}" 
                       Margin="0,15,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
